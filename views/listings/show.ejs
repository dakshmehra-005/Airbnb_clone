<% layout("layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-4 offset-3 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.country %> <br />
        <%= listing.location %> <br />
      </p>
    </div>
  </div>

  <br />
  <div class="btns">
    <a
      href="/listings/<%=listing._id%>/edit"
      class="btn btn-dark col-1 offset-3 mb-3 edit-btn"
      >Edit
    </a>

    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-5 mb-6">Delete</button>
    </form>
  </div>
</div>
<hr />

<div class="col-8 offset-3 mt-3 mb-3">
  <h4>Leave a review</h4>
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="post"
    novalidate
    class="needs-validation"
  >
    <div>
      <label for="rating" class="form-label mt-3">rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range"
      />
    </div>
    <div class="mt-3 mb-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control mb-3"
        required
      ></textarea>
      <div class="invalid-feedback">
        <p>Please add some comment for review</p>
      </div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr />
  <p><b>All reviews</b></p>
  <p><%= listing.reviews %></p>
</div>
